@using MillePortfolio.Models
@model GitProject

<div class="project-container">
    <div class="project card shadow">
        <div class="card-header">
            <h3>@Model.ProjectName</h3>
        </div>
        <div class="card-body project-body d-flex flex-column">
            @if (!string.IsNullOrEmpty(Model.LiveDemoUrl))
            {
                <a href="@Model.LiveDemoUrl" target="_blank" rel="noopener noreferrer">
                    <img src="@Model.ProjectImg"
                         class="project-img"
                         alt="@Model.ProjectName screenshot"
                         loading="lazy" />
                </a>
            }
            else
            {
                <img src="@Model.ProjectImg"
                     class="project-img"
                     alt="@Model.ProjectName screenshot"
                     loading="lazy" />
            }
            <div class="d-flex flex-wrap justify-content-center mt-4">
                @foreach (var tech in Model.Technologies)
                {
                    <img src="@tech.TechIcon.Url"
                         alt="@tech.TechIcon.Technology logo"
                         class="tech-icon mb-2 mx-3"
                         loading="lazy" />
                }
            </div>
            <p class="mt-2"><strong>Beskrivning:</strong></p>
            <p class="text-collapsed description">@Model.Description</p>
            <button onclick="toggleText(this)"
                    class="btn btn-show-more toggleButton btn-custom-width mx-auto"
                    style="margin-bottom: 20px;"
                    aria-expanded="false"
                    aria-label="Visa mer beskrivning">
                <i class="fa-solid fa-arrow-down"></i>
            </button>
            <div class="button-container d-flex justify-content-between mt-auto">
                @if (!string.IsNullOrEmpty(Model.GithubUrl))
                {
                    <a href="@Model.GithubUrl" target="_blank" rel="noopener noreferrer" class="btn btn-secondary d-flex align-items-center justify-content-center btn-fixed-width">
                        <i class="fa-brands fa-github" style="font-size: 2rem; margin-right: 5px;"></i>
                        <span>GitHub</span>
                    </a>
                }
                else
                {
                    <span class="btn btn-outline-secondary d-flex align-items-center justify-content-center btn-fixed-width" style="opacity: 0.6; cursor: not-allowed;">
                        <i class="fa-solid fa-lock" style="font-size: 1.5rem; margin-right: 5px;"></i>
                        <span>Privat</span>
                    </span>
                }
                @if (!string.IsNullOrEmpty(Model.LiveDemoUrl))
                {
                    <a href="@Model.LiveDemoUrl" target="_blank" rel="noopener noreferrer" class="btn btn-secondary d-flex align-items-center justify-content-center btn-fixed-width">
                        <i class="fa-solid fa-eye" style="font-size: 2rem; margin-right: 5px;"></i>
                        <span>Live Demo</span>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
